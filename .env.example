# Required Environment Variables
GEMINI_API_KEY=your_gemini_api_key_here

# Security Configuration
JWT_SECRET=super-secret-change-in-production-use-strong-random-string
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

